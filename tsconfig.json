{
  "compilerOptions": {
    "lib": [
      "esnext",
      "DOM"
    ],
    "target": "esnext",
    "module": "esnext",
    "rootDir": "src",
    "outDir": "build",
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
